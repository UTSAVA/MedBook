<Page
    x:Class="UI_try_1.blob"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UI_try_1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <StackPanel Margin="0">
            <ProgressRing Name="ProgressRing1" IsActive="False" ></ProgressRing>
            
            <Image x:Name="Image1" Height="300" Width="300"  Margin="0,0,0,0"/>
            <Button Click="Button_Click">Select And Upload File</Button>
            <Button Click="done_Click" Content="Back"/>
        </StackPanel>

    </Grid>

</Page>
